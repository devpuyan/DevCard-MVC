@model IEnumerable<MyDevCard.Models.Article>


<!DOCTYPE html>

<section class="latest-blog-section p-3 p-lg-5">
    <div class="container">
        <h2 class="section-title font-weight-bold mb-5">آخرین مقالات</h2>

@foreach (var article in Model)
{
    <div class="row">
    <div class="col-md-4 mb-5">
        <div class="card blog-post-card">
            <img class="card-img-top" src="~/assets/images/blog/blog-post-thumb-card-1.jpg" alt=@article.Name title=@article.Des >
            <div class="card-body">
                <h5 class="card-title">
                    <a class="theme-link" href="blog-post.html">@article.Name
                        Frameworks</a></h5>
                <p class="card-text">@article.Des</p>
<p class="mb-0"><a class="more-link" href="blog-post.html">ادامه مطلب</a></p>

</div>
</div>
</div>
    </div>

        }
    </div>
    
</section>
